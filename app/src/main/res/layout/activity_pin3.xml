<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/includeToolbar"
        layout="@layout/mlb_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    <ScrollView-->
<!--        android:id="@+id/scrollView"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/includeToolbar">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/createNewPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="@string/create_new_pin"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.farasatnovruzov.recyclerlist.ui.StcPinView
            android:id="@+id/createNewPinView"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/roboto_regular"
            android:inputType="numberPassword"
            android:itemBackground="@drawable/pin_background"
            android:maxLength="4"
            android:selectAllOnFocus="true"
            android:textColor="@color/colorPrimary"
            android:textCursorDrawable="@null"
            android:textIsSelectable="true"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cursorColor="@color/transparent"
            app:cursorWidth="0dp"
            app:hideLineWhenFilled="true"
            app:itemHeight="16dp"
            app:itemRadius="5dp"
            app:itemSpacing="10dp"
            app:itemWidth="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:lineColor="@color/white"
            app:lineWidth="0dp"
            tools:text="11" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/includeToolbar">

        <TextView
            android:id="@+id/repeatNewPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="@string/repeat_new_pin"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.farasatnovruzov.recyclerlist.ui.StcPinView
            android:focusable="false"
            android:background="#F1F1F1"
            android:elevation="4dp"
            android:id="@+id/pinCodeView"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:cursorVisible="false"
            android:fontFamily="@font/roboto_regular"
            android:inputType="numberPassword"
            android:itemBackground="@drawable/pin_background"
            android:textColor="@color/colorPrimary"
            android:textCursorDrawable="@null"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cursorColor="@color/transparent"
            app:cursorWidth="0dp"
            app:hideLineWhenFilled="true"
            app:itemCount="4"
            app:itemHeight="16dp"
            app:itemRadius="5dp"
            app:itemSpacing="10dp"
            app:itemWidth="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lineColor="@color/white"
            app:lineWidth="0dp"
            app:viewType="rectangle" />
    </LinearLayout>
<!--    </ScrollView>-->


    <com.farasatnovruzov.recyclerlist.ui.MlbPinNumberBoard
        android:id="@+id/pinKeyBoard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        keyboard:numberkeyboard_keyboardType="integer"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
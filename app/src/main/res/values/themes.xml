    <style name="PinWidget.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="EditTextProfile">
        <item name="colorControlActivated">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/custom_edittext_cursor</item>
        <item name="boxBackgroundMode">none</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/profile_txt_color</item>
        <item name="hintAnimationEnabled">false</item>
    </style>

